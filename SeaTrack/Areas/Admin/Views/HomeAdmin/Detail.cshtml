
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <strong>Thông Tin Admin </strong>
                </div>
                <div class="card-body card-block" ng-app="App" ng-controller="Controller">
                    <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                        <div class="row form-group">
                            <div class="col col-md-3"><label class=" form-control-label">Username</label></div>
                            <div class="col-12 col-md-9">
                                <p class="form-control-static">@Model.Username</p>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Password</label></div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="Password" name="Password" placeholder="Text" class="form-control" value="@Model.Password">
                                <small class="form-text text-muted">This is a help text</small>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Họ tên</label></div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="Fullname" name="Fullname" placeholder="Text" class="form-control" value="@Model.Fullname">
                                <small class="form-text text-muted">This is a help text</small>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Số điện thoại</label></div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="Phone" name="Fullname" placeholder="Text" class="form-control" value="@Model.Phone">
                                <small class="form-text text-muted">This is a help text</small>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Địa chỉ</label></div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="Address" name="Fullname" placeholder="Text" class="form-control" value="@Model.Address">
                                <small class="form-text text-muted">This is a help text</small>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3"><label class=" form-control-label">Quyền tài khoản</label></div>
                            <div class="col col-md-9">
                                <div class="form-check-inline form-check">
                                    <label for="inline-radio1" class="form-check-label col-md-4 ">
                                        <input ng-checked="@Model.RoleID==2" type="radio" id="inline-radio1" name="inline-radios" value="2" class="form-check-input">Đại lý
                                    </label>
                                    <label for="inline-radio2" class="form-check-label col-md-4">
                                        <input ng-checked="@Model.RoleID==3" type="radio" id="inline-radio2" name="inline-radios" value="3" class="form-check-input">Khách hàng
                                    </label>
                                    <label for="inline-radio3" class="form-check-label col-md-4 ">
                                        <input ng-checked="@Model.RoleID==4" type="radio" id="inline-radio3" name="inline-radios" value="4" class="form-check-input">Người dùng
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <button type="reset" class="btn btn-danger btn-sm">
                        <i class="fa fa-ban"></i> Reset
                    </button>
                </div>
            </div>
        </div>

      
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-user"></i><strong class="card-title pl-2">Hình Đại Diện</strong>
                </div>
                <div class="card-body">
                    <div class="mx-auto d-block">
                        <img class="rounded-circle mx-auto d-block" src="~/images/admin.jpg" alt="Card image cap">
                        <h5 class="text-sm-center mt-2 mb-1">Steven Lee</h5>
                        <div class="location text-sm-center"><i class="fa fa-map-marker"></i> California, United States</div>
                    </div>
                    <hr>
                    <div class="card-text text-sm-center">
                        <input type="file" class="btn btn-warning" />
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-dot-circle-o"></i> Submit
                        </button>
                    </div>
                </div>
            </div>
            <br/>
            
            <div class="card">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh Sách Thiết Bị</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered text-center">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Tên thiết bị</th>

                                    <th scope="col">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Mark</td>

                                    <td align="center">
                                        <a href="#" data-ng-href="@Url.Action("EditDevice","Device", new {area = "Admin" })/{{a.UserID}}"><i class="fa fa-edit">edit</i></a>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="~/Scripts/angular.js"></script>
<script>
    var app = angular.module("App", []);

    app.controller("Controller", function ($scope, $http) {
    })
</script>
<script src="vendors/jquery/dist/jquery.min.js"></script>
<script src="vendors/popper.js/dist/umd/popper.min.js"></script>
<script src="vendors/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="vendors/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
<script src="vendors/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="assets/js/main.js"></script>
